from bs4 import BeautifulSoup
import requests
import time
import datetime
import pandas as pd
import smtplib

def check_stat():
    URL = ("https://www.tankathon.com/mock_draft")
    headers = {"User-Agent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/97.0.4692.71 Safari/537.36", "Accept-Encoding":"gzip, deflate", "Accept":"text/html,application/xhtml+xml,application/xml;q=0.9,*/*;q=0.8", "DNT":"1","Connection":"close", "Upgrade-Insecure-Requests":"1"}

    page = requests.get(URL, headers=headers)

    soup1 = BeautifulSoup(page.content, "html.parser")

    soup2 = BeautifulSoup(soup1.prettify(), "html.parser")

    for playername in soup2.find_all("div",{'class':"mock-row-name"}) : print(playername.get_text())
    for playermeasure in soup2.find_all("div",{'class':"section height-weight"}) : print(playermeasure.get_text())
    for playerstats in soup2.find_all("div",{'class':"stat pts"}) : print(playerstats.get_text())
               
             
           

    import datetime

    today = datetime.date.today()
    
    import csv 

    header = ['PlayerName', 'PlayerMeasure', 'PlayerPoints', 'Date']
    data = [playername, playermeasure, playerstats, today]


#appending data to the csv

    with open('TankathonScraperDataset.csv', 'a+', newline='', encoding='UTF8') as f:
        writer = csv.writer(f)
        writer.writerow(data)
        
 check_stat() 
